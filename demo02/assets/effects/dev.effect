CCEffect %{
  techniques:
  - name: test1
    passes:
    - vert: vs:vert
      frag: fs:frag
      depthStencilState: &opaque-ds
        depthTest: true
        depthWrite: true
      properties: &props
        color: { value: [0.3, 0.5, 0.7, 0.5], inspector: { type: color } }
    - switch: ALL_WHITE
      vert: compare-vs:vert
      frag: compare-fs:frag
      depthStencilState: *opaque-ds
  - name: test2
    passes:
    - vert: vs:vert
      frag: fs:frag
      depthStencilState: &trans-ds
        depthTest: true
        depthWrite: false
      blendState: &bs
        targets:
        - blend: true
          blendSrc: src_alpha
          blendDst: one_minus_src_alpha
          blendDstAlpha: one_minus_src_alpha
      properties: *props
    - switch: ALL_WHITE
      vert: compare-vs:vert
      frag: compare-fs:frag
      depthStencilState: *trans-ds
      blendState: *bs
%}

CCProgram vs %{
  precision mediump float;
  #include <cc-global>
  #include <cc-local>
  #include <input-standard>

  in vec3 a_normal;
  in vec2 a_texCoord;
  out vec2 uv;
  out vec3 normal;

  vec4 vert () {
    StandardVertInput In;
    CCVertInput(In);

    uv = a_texCoord;
    normal = a_normal;
	  return cc_matViewProj * cc_matWorld * vec4(In.position, 1);
  }
%}

CCProgram fs %{
  precision mediump float;
  #include <output>

  in vec2 uv;
  in vec3 normal;

  #pragma define SOURCE options([color.r, color.g, color.b])
  #pragma define COUNT range([0, 3])

  uniform Constants {
    vec4 color;
  };

  vec4 frag () {
    vec4 c = vec4(1);
    c.rgb *= vec3(SOURCE);
    c.r *= float(COUNT);
    return CCFragOutput(c);
  }
%}

CCProgram compare-vs %{
  precision mediump float;
  #include <cc-global>
  #include <cc-local>
  #include <input>

  vec4 vert () {
    vec3 position;
    CCVertInput(position);

	  vec4 pos = vec4(position, 1);
    pos.x += 2.0;
    return cc_matViewProj * cc_matWorld * pos;
  }
%}

CCProgram compare-fs %{
  precision mediump float;
  #include <output>

  vec4 frag () {
    return CCFragOutput(vec4(0.3, 0.5, 0.7, 0.5));
  }
%}
